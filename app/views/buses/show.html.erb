<br/>
<div class="buttons">
  <%= link_to "Book Ticket" ,new_bus_reservation_path(@bus.id) ,class:"btn btn-success"%><br/><br/>
  <% if current_user.present? %> 
    <% if current_user.id == @bus.owner_id %>
      <%= link_to "Edit this bus", edit_bus_owner_bus_path(@bus) ,class:"btn btn-primary"%>
      <br/><br/>
      <%= link_to "show Reservations" , bus_choose_date_path(@bus) ,class:"btn btn-success"%><br/><br/>
      <%= link_to "Destroy this bus", bus_owner_bus_path(@bus), method: :delete, class: "btn btn-danger py-3", data: { turbo_method: :delete, confirm: "Are you sure?" } %>
    <% end %>
  <% end %>
  <%= link_to "Back to buses", bus_owner_buses_path ,class:"btn btn-info"%>
</div>
<br/><br/>
<%= render "bus_owner/buses/bus" ,bus:@bus %>

<style>

.buttons
{
  display:flex;
  gap:20px;
}
</style>